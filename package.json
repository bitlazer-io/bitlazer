{
  "name": "bitlazer",
  "engines": {
    "node": "20",
    "pnpm": ">=9.0.0 <10.0.0"
  },
  "scripts": {
    "preinstall": "npm exec -- only-allow pnpm",
    "precommit:sol": "npm run fmtsol && npm run compile-contracts",
    "contracts:test": "hardhat test",
    "coverage": "hardhat coverage",
    "solhint": "solhint 'contracts/**/*.sol'",
    "fmt": "prettier --write test",
    "fmtsol": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "fmtsol:check": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "contracts:compile": "hardhat compile",
    "abi:generate": "node scripts/generate-abi.js",
    "contracts:build": "npm run contracts:compile && npm run abi:generate",
    "scripts:wrap-1lbtc": "hardhat run scripts/wrap-1lbtc.ts --network arbitrum-sepolia",
    "prepare": "husky"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.7.0",
    "@types/cors": "^2.8.17",
