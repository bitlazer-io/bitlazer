    "keyv": "^5.0.1",
    "lodash.merge": "^4.6.2",
    "moralis": "^2.26.1",
    "pino": "^8.20.0",
    "prom-client": "^15.1.2",
    "redis": "^4.6.13",
    "remeda": "^2.11.0",
